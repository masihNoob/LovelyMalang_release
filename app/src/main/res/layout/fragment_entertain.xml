<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="0dp"
    android:orientation="vertical"
    android:background="@drawable/gedek"
    tools:context="com.lunartech.lovelymalang.ActivityTourism">

    <ImageView
        android:id="@+id/mainbg"
        android:src="@drawable/gedek"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/upperBar"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/col5"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:padding="14dp"
                android:layout_gravity="right"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:scaleType="fitEnd"
                android:src="@drawable/beautifulmalang" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/lyrSpa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/upperBar"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        >
        <ImageButton
            android:id="@+id/btnSpa"
            android:layout_width="@dimen/iconsize"
            android:layout_height="@dimen/iconsize"
            android:src="@drawable/ic_spa"
            android:scaleType="centerInside"
            android:background="@null"
            android:tint="@color/col3"
            android:onClick="onClick"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spa"
            android:gravity="center"
            android:textColor="@color/col3"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyrKaraoke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@+id/upperBar"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:paddingRight="20dp"
        >
        <ImageButton
            android:id="@+id/btnKaraoke"
            android:layout_width="@dimen/iconsize"
            android:layout_height="@dimen/iconsize"
            android:src="@drawable/ic_karaoke"
            android:scaleType="centerInside"
            android:tint="@color/col3"
            android:background="@null"
            android:onClick="onClick"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Karaoke"
            android:gravity="center"
            android:textColor="@color/col3"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyrDiskotik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/upperBar"
        android:layout_marginTop="30dp"
        >
        <ImageButton
            android:id="@+id/btnDiskotik"
            android:layout_width="@dimen/iconsize"
            android:layout_height="@dimen/iconsize"
            android:src="@drawable/ic_discoutic"
            android:scaleType="centerInside"
            android:tint="@color/col3"
            android:background="@null"
            android:onClick="onClick"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discotheque"
            android:gravity="center"
            android:textColor="@color/col3"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_alignLeft="@+id/lyrDiskotik"
        android:layout_alignRight="@+id/lyrDiskotik"
        android:layout_below="@+id/lyrDiskotik"
        android:layout_marginTop="30dp"
        >
        <ImageButton
            android:id="@+id/btnCinema"
            android:layout_width="@dimen/iconsize"
            android:layout_height="@dimen/iconsize"
            android:src="@drawable/ic_cinema"
            android:scaleType="centerInside"
            android:tint="@color/col3"
            android:background="@null"
            android:onClick="onClick"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cinema"
            android:gravity="center"
            android:textColor="@color/col3"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyrBeautycenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@+id/lyrSpa"
        android:layout_alignLeft="@+id/lyrSpa"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        >
        <ImageButton
            android:id="@+id/btnBeautycenter"
            android:layout_width="@dimen/iconsize"
            android:layout_height="@dimen/iconsize"
            android:src="@drawable/ic_beautyshop"
            android:scaleType="centerInside"
            android:tint="@color/col3"
            android:background="@null"
            android:onClick="onClick"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beauty\nShop"
            android:gravity="center"
            android:textColor="@color/col3"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyrSportcenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@+id/lyrKaraoke"
        android:layout_alignLeft="@+id/lyrKaraoke"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        >
        <ImageButton
            android:id="@+id/btnSportcenter"
            android:layout_width="@dimen/iconsize"
            android:layout_height="@dimen/iconsize"
            android:src="@drawable/ic_sportcenter"
            android:scaleType="centerInside"
            android:tint="@color/col3"
            android:background="@null"
            android:onClick="onClick"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sport\nCenter"
            android:gravity="center"
            android:textColor="@color/col3"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@+id/lyrBeautycenter"
        android:layout_alignLeft="@+id/lyrBeautycenter"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        >
        <ImageButton
            android:id="@+id/btnTV"
            android:layout_width="@dimen/iconsize"
            android:layout_height="@dimen/iconsize"
            android:src="@drawable/ic_tv"
            android:scaleType="centerInside"
            android:tint="@color/col3"
            android:background="@null"
            android:onClick="onClick"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TV's"
            android:gravity="center"
            android:textColor="@color/col3"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@+id/lyrSportcenter"
        android:layout_alignLeft="@+id/lyrSportcenter"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        >
        <ImageButton
            android:id="@+id/btnRadio"
            android:layout_width="@dimen/iconsize"
            android:layout_height="@dimen/iconsize"
            android:src="@drawable/ic_radio"
            android:scaleType="centerInside"
            android:tint="@color/col3"
            android:background="@null"
            android:onClick="onClick"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Radio's"
            android:gravity="center"
            android:textColor="@color/col3"
            />
    </LinearLayout>
</RelativeLayout>
